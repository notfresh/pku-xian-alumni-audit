/**index.wxss**/

page {
  background-color: #ffffff;  /* 改成白色背景 */
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;  /* 改回space-between来控制间距 */
  height: 100vh;
  padding: 160rpx 0 320rpx;  /* 再次增加底部padding 100rpx */
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: -60rpx;
}

.logo {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 60rpx;
}

.main-title {
  font-size: 40rpx;
  color: #94070a;  /* 改成北大红 */
  font-weight: bold;
  margin-bottom: 20rpx;
}

.sub-title {
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.7);  /* 改成深灰色 */
}

.button-container {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  /* 删除margin-top */
}

.register-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #94070a;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 8rpx rgba(148, 7, 10, 0.2);
  display: flex;  /* 添加flex布局 */
  align-items: center;  /* 垂直居中 */
  justify-content: center;  /* 水平居中 */
}

.register-btn-hover {
  background-color: #7a0608;  /* 稍深的红色 */
  transform: scale(0.98);
}