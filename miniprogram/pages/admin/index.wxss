.container {
  padding: 20rpx;
  box-sizing: border-box;
  width: 100%;
}

.tabs {
  flex: 1;
  display: flex;
  margin-right: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
  font-size: 36rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #94070a;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 6rpx;
  background: #94070a;
  border-radius: 3rpx;
}

.application-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-sizing: border-box;
  width: 100%;
  overflow: hidden;
}

.info {
  margin-bottom: 20rpx;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.college, .major, .graduation {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.photos {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.approve-btn, .reject-btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.approve-btn {
  background: #94070a;
  color: #fff;
}

.reject-btn {
  background: #f5f5f5;
  color: #666;
}

.approve-btn::after, 
.reject-btn::after {
  border: none;
}

.info-row {
  margin-bottom: 16rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
  width: 100%;
}

.info-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  min-width: 140rpx;
  margin-right: 10rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
  min-width: 0;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 20rpx;
  color: #333;
}

.gender {
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
}

.photos-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin: 20rpx 0;
}

.photo-item {
  flex: 1;
  min-width: 200rpx;
  max-width: calc(33.33% - 14rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.photo-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.photo {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.wechat-value {
  position: relative;
  padding: 4rpx 16rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}

.wechat-value:active {
  background: #eee;
}

.comment-box {
  margin: 20rpx 0;
  width: 100%;
}

.comment-input {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  background: #fff;
}

.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  box-sizing: border-box;
}

.dialog-title {
  font-size: 32rpx;
  text-align: center;
  margin-bottom: 40rpx;
  font-weight: 500;
}

.password-input-box {
  position: relative;
  margin-bottom: 40rpx;
  width: 100%;
}

.password-input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 80rpx 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.password-eye {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

.eye-icon {
  width: 40rpx;
  height: 40rpx;
  opacity: 0.6;
}

.dialog-btns {
  display: flex;
  gap: 20rpx;
  margin-top: 20rpx;
}

.dialog-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  background: #94070a;
  color: #fff;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
}

.dialog-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  margin-bottom: 30rpx;
}

.tabs {
  flex: 1;
  display: flex;
  justify-content: center;
  margin-right: 40rpx;
}

.tab {
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #666;
  position: relative;
  text-align: center;
}

.tab.active {
  color: #94070a;
  font-weight: bold;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #94070a;
  border-radius: 2rpx;
}

.header-btns {
  display: none;
}

.bottom-btns {
  position: fixed;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  gap: 20rpx;
  padding: 0 30rpx;
  justify-content: center;
}

.bottom-btn {
  flex: 1;
  max-width: 240rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  background: #f5f5f5;
  color: #666;
  border-radius: 32rpx;
  margin: 0;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bottom-btn:active {
  opacity: 0.8;
}

.change-password-btn {
  background: #94070a;
  color: #fff;
}

.logout-btn {
  background: #f5f5f5;
  color: #666;
}

.load-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
}

.list {
  padding-bottom: 120rpx;  /* 为底部按钮留出空间 */
}
  