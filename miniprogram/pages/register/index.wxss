.container {
  padding: 30rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
}

form {
  width: 90%;
  max-width: 600rpx;
}

.form-group {
  width: 100%;
}

.form-item {
  margin-bottom: 40rpx;
  width: 100%;
}

.label {
  display: block;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}

.input::placeholder {
  color: #999;
}

.radio-group {
  display: flex;
  gap: 40rpx;
}

.radio {
  font-size: 28rpx;
  color: #333;
}

.upload-box {
  width: 100%;
  height: 300rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
  box-sizing: border-box;
}

.upload-placeholder {
  color: #999;
  font-size: 28rpx;
}

.preview {
  width: 100%;
  height: 100%;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #94070a;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  margin-top: 60rpx;
}

.submit-btn:active {
  background-color: #7a0608;
}

.picker-content {
  width: 100%;
  height: 88rpx;
  padding: 0 24rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  position: relative;
}

.picker-content text {
  position: absolute;
  left: 24rpx;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.placeholder {
  color: #999;
  font-size: 28rpx;
}

.picker-content text:not(.placeholder) {
  color: #333;
}

.date-picker-group {
  display: flex;
  gap: 20rpx;
}

.year-picker {
  flex: 3;
  width: 0;
}

.month-picker {
  flex: 2;
  width: 0;
}

/* 添加禁用状态的样式 */
.input[disabled] {
  background-color: #f5f5f5;
  color: #999;
}

.picker-content.disabled {
  background-color: #f5f5f5;
  color: #999;
  border-color: #eee;
}

.picker-content.disabled text {
  color: #999;
}

.picker-content.disabled .placeholder {
  color: #999;
}

.radio.disabled {
  color: #999;
}

.upload-box.disabled {
  background-color: #f5f5f5;
  cursor: not-allowed;
}

/* 按钮组样式 */
.button-group {
  display: flex;
  gap: 20rpx;
  margin-top: 60rpx;
}

.edit-btn, .resubmit-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
}

.edit-btn {
  background-color: #ffffff;
  color: #94070a;
  border: 2rpx solid #94070a;
}

.resubmit-btn {
  background-color: #94070a;
  color: #ffffff;
}

.save-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  background-color: #ffffff;
  color: #94070a;
  border: 2rpx solid #94070a;
}

.save-btn:active {
  opacity: 0.8;
}

/* 修改所有按钮的样式 */
.submit-btn, .edit-btn, .resubmit-btn, .save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 8rpx;
  padding: 0;  /* 移除内边距 */
  margin: 0;   /* 移除外边距 */
  display: flex;  /* 使用flex布局 */
  align-items: center;  /* 垂直居中 */
  justify-content: center;  /* 水平居中 */
}

/* 移除按钮的默认边框 */
.submit-btn::after,
.edit-btn::after,
.resubmit-btn::after,
.save-btn::after {
  border: none;
}

.approval-notice {
  text-align: center;
  padding: 30rpx;
  background: #e8f5e9;
  color: #4caf50;
  border-radius: 8rpx;
  margin-top: 60rpx;
  font-size: 28rpx;
}
 